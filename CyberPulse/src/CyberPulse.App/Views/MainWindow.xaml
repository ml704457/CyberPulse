<Window x:Class="CyberPulse.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberPulse"
        Width="1200" Height="800"
        Background="#0B0F14"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Sources -->
        <Border Grid.Column="0" Background="#111827" Padding="12">
            <TextBlock Text="Sources"
                       Foreground="#38BDF8"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Articles list -->
        <ListBox Grid.Column="1"
                 ItemsSource="{Binding Articles}"
                 SelectedItem="{Binding SelectedArticle}"
                 Background="#0B0F14"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="6" Padding="12" Background="#111827" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Source}"
                                       Foreground="#94A3B8"
                                       FontSize="11"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Detail panel -->
        <Border Grid.Column="2" Background="#111827" Padding="16">
            <StackPanel DataContext="{Binding SelectedArticle}">
                <TextBlock Text="{Binding Title}"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Summary}"
                           Margin="0,12,0,0"
                           Foreground="#CBD5E1"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
