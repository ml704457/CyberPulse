<Window x:Class="CyberPulse.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberPulse"
        Width="1200" Height="800"
        Background="#0B0F14"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Sources (placeholder) -->
        <Border Grid.Column="0" Background="#111827" Padding="12">
            <TextBlock Text="Sources"
                       Foreground="#38BDF8"
                       FontSize="16"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Center: Articles list (placeholder) -->
        <Border Grid.Column="1" Background="#0B0F14" Padding="8">
            <TextBlock Text="Liste des news (à brancher au ViewModel)"
                       Foreground="White"
                       VerticalAlignment="Top"/>
        </Border>

        <!-- Right: Details (placeholder) -->
        <Border Grid.Column="2" Background="#111827" Padding="16">
            <TextBlock Text="Détails"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"/>
        </Border>
    </Grid>
</Window>
